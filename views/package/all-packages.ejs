<%- include("../layouts/adminHeader") %>

  <!-- Main Sidebar Container -->
  <%- include("../layouts/adminAside") %>


  <style>
    .card_cus {
      width: 28%;
    background: white;
    border: 1px solid #e3e3e3;
    text-align: center;
    margin-right: 5%;
    float: left;
    position: relative;
    margin-bottom: 40px;
}
span.real_amount {
    font-size: 22px;
    font-weight: bold;
}
.card_header_cus {
    padding: 7px;
    font-size: 17px;
    font-weight: 700;
    text-transform: uppercase;
    color: white;
}
.amount {
    padding: 14px;
    font-size: 19px;
}
.card_cus p{
  font-size: 16px;
}
.accent_btn {
    background: #1976D2;
    color: white;
    letter-spacing: 0.5px;
    width: auto;
    border-radius: 50px;
    padding: 7px 17px;
    font-size: 14px;
    margin: 0 auto;
    border: 1px solid #1976D2;
    display: flex;
    column-gap: 7px;
    align-items: center;
    font-weight: 700;
}
.card_body_cus {
    padding-bottom: 15px;
}
span.cross_amount {
    text-decoration: line-through;
}
.status1{
    position: absolute;
    right: -30px;
    top: 166px;
}
.status2{
    position: absolute;
    right: -30px;
    top: 140px;
}
  </style>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">All Packages</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="dashboards">Home</a></li>
                <li class="breadcrumb-item active">All Packages</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <div class="content">
        <div class="container-fluid">
          <% if (code !==undefined) { %>
            <% if (code===1) { %>
              <div class="alert alert-success" role="alert">
                <%= message %>
              </div>
              <% } else { %>
                <div class="alert alert-danger" role="alert">
                  <%= message %>
                </div>
                <% } %>
                  <% } %>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="card">
                          <div class="card-header">
                            <h3 class="card-title">Packages Details</h3>

                            <div class="card-tools">
                              <ul class="pagination pagination-sm float-right">
                                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                              </ul>
                            </div>
                          </div>
                          <!-- /.card-header -->
                          <div class="card-body p-4">

                            <% if(data !== undefined){%>
                              <% data.forEach(function(package) { %>
                                
                                <div class="card_cus ">
                                  <div class="card_header_cus" style="background-color: <%= package.pack_color %>">
                                    <%= package.name %>
                                  </div>
                                  <div class="amount">
                                    <span class="cross_amount">₹<%= package.discounted_price %></span>
                                    <span class="real_amount" style="color: <%= package.pack_color %>"> ₹<%= package.price %></span>
                                    <sup ><%= package.offer %></sup>
                                  </div>
                                  <div class="card_body_cus">
                                    <p><%= package.services %> </p>
                                    <a href="<%= package.button_link %>">
                                      <button class="accent_btn">Buy Now</button>
                                    </a>
                                    </div>
                                    <% if(package.is_prime){%>
                                    <button class="btn status1 bg-gradient-success btn-xs">Recommended</button>
                                    <% }%>
                                    <% if(package.is_active){%>
                                      <button class="btn status2 bg-gradient-info btn-xs">Active</button>
                                      <% }else{ %>
                                        <button class="btn status2 bg-gradient-secondary disabled btn-xs">Disable</button>
                                      <% }%>
                                      
                                  </div>
                              <% }); %>
                            <% }%>
                           
                          </div>
                          <!-- /.card-body -->
                        </div>

                        <!-- /.card -->
                      </div>
                    </div>
                    <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    <%- include("../layouts/adminFooter") %>