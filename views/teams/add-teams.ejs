<%- include("../layouts/adminHeader") %>

  <!-- Main Sidebar Container -->
  <%- include("../layouts/adminAside") %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Add Teams</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="dashboards">Home</a></li>
                <li class="breadcrumb-item active">All Teams</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <% if (code !==undefined) { %>
            <% if (code===1) { %>
              <div class="alert alert-success" role="alert">
                <%= message %>
              </div>
            <% } else { %>
                <div class="alert alert-danger" role="alert">
              <%= message %>
                </div>
            <% } %>
          <% } %>
          <div class="row">
            <!-- left column -->
            <div class="col-md-6">
              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Team Details</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="teamName">Team Name :</label>
                      <input type="text" class="form-control" id="teamName" name="team_name" required
                        placeholder="India">
                    </div>

                    <div class="form-group">
                      <label for="contryCode">Country Code :</label>
                      <input type="text" class="form-control" id="contryCode" name="country_code" required
                        placeholder="IN">
                    </div>

                    <div class="form-group">
                      <label for="logoUrl">Logo URL :</label>
                      <input type="text" class="form-control" id="logoUrl" name="logo" required
                        placeholder="Enter image link">
                    </div>

                    <div class="form-group">
                      <label for="imageID">Image ID :</label>
                      <input type="text" class="form-control" id="imageID" name="image_id" required
                        placeholder="Enter image id">
                    </div>


                    <div class="form-group">
                      <label for="teamDetails">Descripton :</label>
                      <textarea name="" id="teamDetails" rows="2" name="details" class="form-control" required
                        placeholder="Enter small description 2 lines"></textarea>
                    </div>


                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                      <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Image data</h3>

                  <div class="card-tools">
                    <ul class="pagination pagination-sm float-right">
                      <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                      <li class="page-item"><a class="page-link" href="#">1</a></li>
                      <li class="page-item"><a class="page-link" href="#">2</a></li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                    </ul>
                  </div>
                </div>

                <div class="card-body p-0" style="height: 500px; overflow-y: scroll;">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Link</th>
                        <th>image ID</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (data !== undefined) { %>
                      <% data.forEach(function(media) { %>
                        <tr>
                          <td>
                            <img src="<%= media.small_media %>" width="70" alt="">
                          </td>
                          <td style="width: 119px;">
                            <%= media.name %>
                          </td>
                          <td>
                            <div class="d-flex">
                              <button class="btn btn-outline-info btn-flat button_cusom_copy"
                                data-link="<%= media.small_media %>" data-text="Small" type="button">Small
                              </button>
                              <button class="btn btn-outline-info btn-flat button_cusom_copy"
                                data-link="<%= media.large_media %>" data-text="Large" type="button">Large
                              </button>
                            </div>
                          </td>
                          <td><button class="btn btn-outline-success btn-flat button_cusom_copy"
                              data-link="<%= media._id %>" type="button" data-text="Img ID">Img ID</button>
                          </td>
                        </tr>
                        <% }); %>
                        <% } %>
                    </tbody>


                  </table>
                </div>
              </div>
            </div>

          </div>
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->




    <%- include("../layouts/adminFooter") %>