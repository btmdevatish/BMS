<%- include("../layouts/adminHeader") %>

    <!-- Main Sidebar Container -->
    <%- include("../layouts/adminAside") %>



        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Add Media</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="dashboards">Home</a></li>
                                <li class="breadcrumb-item active">Add Media</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- views/alert.ejs -->
                    <% if (code !== undefined) { %>
                        <% if (code === 1) { %>
                            <div class="alert alert-success" role="alert">
                                <%= message %>
                            </div>
                        <% } else { %>
                            <div class="alert alert-danger" role="alert">
                                <%= message %>
                            </div>
                        <% } %>
                    <% } %>

                                <div class="row">
                                    <div class="col-md-6">
                                        <!-- general form elements -->
                                        <div class="card card-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">Upload</h3>
                                            </div>
                                            <!-- /.card-header -->
                                            <!-- form start -->
                                            <form method="post" enctype="multipart/form-data">
                                                <div class="card-body">

                                                    <div class="form-group">
                                                        <label for="exampleInputFile">File input</label>
                                                        <div class="input-group">
                                                            <div class="custom-file">
                                                                <input type="file" name="img_upload"
                                                                    class="custom-file-input" id="exampleInputFile"
                                                                    required>
                                                                <label class="custom-file-label"
                                                                    for="exampleInputFile">Choose
                                                                    file</label>
                                                            </div>
                                                            <div class="input-group-append">
                                                                <span class="input-group-text">Upload</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- /.card-body -->

                                                <div class="card-footer">
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <!-- /.card -->


                                    <div class="col-md-6">
                                        <!-- Form Element sizes -->
                                        <div class="card card-success">
                                            <div class="card-header">
                                                <h3 class="card-title">Responce</h3>
                                            </div>
                                            <div class="card-body">
                                                <div class="form-horizontal">
                                                    
                                                    <% if (code !== undefined) { %>
                                                        <div class="card-body">
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Small</label>
                                                                <div class="col-sm-10">
                                                                    <input type="text" class="form-control"
                                                                        value="<%= data.small_media %>">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Medium</label>
                                                                <div class="col-sm-10">
                                                                    <input type="text" class="form-control"
                                                                        value="<%= data.media_media %>">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Large</label>
                                                                <div class="col-sm-10">
                                                                    <input type="text" class="form-control"
                                                                        value="<%= data.large_media %>">
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <% }else{ %>
                                                            <p>Wait for image upload</p>
                                                            <% }%>
                                                                <!-- /.card-body -->

                                                                <!-- /.card-footer -->
                                                </div>
                                            </div>
                                            <!-- /.card-body -->
                                        </div>
                                    </div>
                                </div>
                </div><!-- /.container-fluid    -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->


        <%- include("../layouts/adminFooter") %>